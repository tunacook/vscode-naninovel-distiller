{
	"compilerOptions": {
		"outDir": "out",
        "rootDir": "src",
		"module": "node20",
		"moduleResolution": "Node16",
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"types": ["node", "mocha", "vscode"],
		"sourceMap": true,
		"skipLibCheck": true, // 外部ライブラリ自体の型エラーを無視
		"strict": true,   /* enable all strict type-checking options */
		"baseUrl": ".",
        "paths": {
            "naninovel-script-spec": [
                "./node_modules/naninovel-script-spec/dist/index.d.ts"
            ]
        }
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", ".vscode-test"]
}