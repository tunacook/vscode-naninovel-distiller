{
  "name": "vscode-naninovel-distiller",
  "displayName": "Naninovel Distiller",
  "description": "Naninovelシナリオの文字数統計を表示します",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Naninovel Distiller",
      "properties": {
        "naninovelDistiller.excludeDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            ".github",
            ".prh",
            ".vscode",
            "docs",
            "staging-test"
          ],
          "description": "統計スキャンから除外するディレクトリ名のリスト"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nani-distiller-sidebar",
          "title": "Nani Distiller",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "nani-distiller-sidebar": [
        {
          "id": "naninovelStatsView",
          "name": "Scenario Statistics"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "naninovel-script-spec": "github:tunacook/naninovel-script-spec"
  }
}